<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dip"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/about_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kelompok 3 Aplikasi Catatan Keuangan"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
        android:textSize="16sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/about_link_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/nama1"
        android:textColor="@color/button_grey" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/button_grey" />

    <TextView
        android:id="@+id/about_link_credits2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nama2"
        android:textColor="@color/button_grey" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/button_grey" />


    <TextView
        android:id="@+id/about_link_credits3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/nama3"
        android:textColor="@color/button_grey" />

</LinearLayout>