<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kelompok3.catatankeuangan">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logobiru_latar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logobiru_latar"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.kelompok3.catatankeuangan.Splashscreen"
            android:label="@string/app_name"
            android:theme="@style/Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kelompok3.catatankeuangan.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.kelompok3.catatankeuangan.KategoriPendapatan"
            android:label="Kategori Pendapatan"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.kelompok3.catatankeuangan.RangkumanActivity"
            android:label="Rangkuman"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.kelompok3.catatankeuangan.KategoriPengeluaran"
            android:label="Kategori Pengeluaran"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.kelompok3.catatankeuangan.report.ReportActivity"
            android:label="Laporan"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>